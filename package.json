    "bcrypt": "^5.1.0",
    "bullmq": "^3.10.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^15.8.0",
    "handlebars": "^4.7.7",
    "http-errors": "^2.0.0",
    "joi": "^17.7.1",
    "jsonwebtoken": "^9.0.0",
    "keyv": "^4.5.2",
    "mysql2": "^3.1.2",
    "nodemailer": "^6.9.1",
    "otp-generator": "^4.0.1",
    "pm2": "^5.2.2",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.3.12",
    "typeorm-naming-strategies": "^4.1.0",
    "winston": "^3.8.2"
