{
  "name": "hd-training",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "start:dev": "nodemon src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs -d src/core/connection/database.ts",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:show": "npm run typeorm -- migration:show",
    "migration:generate": "npm run typeorm -- migration:generate -p",
    "migration:create": "typeorm-ts-node-commonjs migration:create",
    "schema:drop": "npm run typeorm -- schema:drop",
    "format": "prettier 'src/**/*.ts' --write",
    "lint": "eslint src --fix",
    "prepare": "husky install",
    "worker": "node dist/worker.js",
    "worker:dev": "nodemon src/worker.ts",
    "test": "jest"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@hd.github.com:thanhtran-hd/hd-training.git"
  },
  "author": "",
  "license": "ISC",
